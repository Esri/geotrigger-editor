<div class='gt-panel-top-bar'>
  <a href='#list' class='gt-panel-top-bar-button gt-back-to-list'></a>
  <h3>{{#if triggerId}}Edit{{else}}Create{{/if}}</h3>
  <a href='#' class='gt-panel-top-bar-button gt-close-drawer'></a>
</div>

<div class='gt-panel-content'>
  <form class='gt-form gt-form-edit'>
    <section class='gt-form-section'>
      <label for='tags'>
        <span class='gt-label-left'>When a device tagged</span>
        <input type='text' name='tags' placeholder='enter tags' class='gt-input-right' value='{{tagList tags}}'>
      </label>

      <label for='condition'>
        <select name='condition[direction]' class='gt-direction'>
          {{#select condition.direction}}
          <option value='enter'>enters</option>
          <option value='leave'>leaves</option>
          {{/select}}
        </select>

        <span>a</span>

        <select name='geometry-type' class='gt-input-right'>
          {{#selectShape condition}}
          <option value='polygon'>polygon</option>
          <option value='radius'>circle</option>
          {{/selectShape}}
        </select>
      </label>

      <div class='gt-actions'>
        <!-- <button class='gt-button gt-button-blue gt-add-action'>Add an action...</button> -->

        <!-- <select class='gt-action-selector'>
          {{#select action}}
          <option value='notification'>send the device a message</option>
          <option value='callbackUrl'>post to a server</option>
          <option value='trackingProfile'>change tracking profile</option>
          {{/select}}
        </select>
        <span>:</span> -->

        <label class='gt-action'>
          <span class='gt-label-block'>send a message to the device:</span>
          <textarea class='gt-action-message-box' name='action[notification][text]' placeholder='message'>{{action.notification.text}}</textarea>
        </label>

        <label class='gt-action'>
          <span class='gt-label-left'>send a URL to the device:</span>
          <input class='gt-input-right' type='text' name='action[notification][url]' placeholder='http://' value='{{action.notification.url}}'>
        </label>

        <label class='gt-action'>
          <span class='gt-label-left'>send the device a sound:</span>
          <input class='gt-input-right' type='text' name='action[notification][sound]' placeholder='sound' value='{{action.notification.sound}}'>
        </label>

        <label class='gt-action'>
          <span class='gt-label-block'>send data to the device:</span>
          <textarea class='gt-action-message-box' name='action[notification][data]' placeholder='{ your: "data" }'>{{action.notification.data}}</textarea>
        </label>

        <label class='gt-action'>
          <span class='gt-label-left'>send an icon to the device (android):</span>
          <input class='gt-input-right' type='text' name='action[notification][icon]' placeholder='icon' value='{{action.notification.icon}}'>
        </label>

        <label class='gt-action'>
          <span class='gt-label-left'>post to a server:</span>
          <input class='gt-input-right' type='text' name='action[callbackUrl]' placeholder='http://' value='{{action.callbackUrl}}'>
        </label>

        <label class='gt-action'>
          <span class='gt-label-left'>change the tracking profile to:</span>
          <select class='gt-input-right' name='action[trackingProfile]'>
            <option>---</option>
            {{#select action.trackingProfile}}
            <option value='fine'>fine</option>
            <option value='adaptive'>adaptive</option>
            <option value='rough'>rough</option>
            <option value='off'>off</option>
            {{/select}}
          </select>
        </label>
      </div>

      <!--
      <label for='date'>
        This will start
        <select class='gt-date-start'>
          <option value='now'>now</option>
          <option value='future'>in the future</option>
        </select>
        and persist
        <select class='gt-date-end'>
          <option value='never'>indefinitely</option>
          <option value='future'>until a future date</option>
        </select>
      </label>
      -->
    </section>

    <section class='gt-form-section gt-nick-wrapper'>
      <label for='title'>
        <span class='gt-label-left'>Title <em>(optional)</em></span>
        <input class='gt-input-right' type='text' name='properties[title]' placeholder='My Cool Trigger' value='{{properties.title}}'>
      </label>
    </section>

    <section class='gt-form-section'>
      <button class='gt-button gt-button-blue gt-submit'>Update</button>
      {{#if triggerId}}
      <ul class='gt-edit-controls'>
        <li>
          <a class='gt-reset-delete' href='#'>&#x2716;</a>
        </li>
        <li>
          <button class='gt-item-delete gt-button-delete'></button>
        </li>
      </ul>
      {{/if}}
    </section>
  </form>
</div>