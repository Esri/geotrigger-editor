<div class='gt-panel-top-bar'>
  <a href='#list' class='gt-panel-top-bar-button gt-back-to-list'></a>
  <h3>Edit</h3>
  <a href='#' class='gt-panel-top-bar-button gt-close-drawer'></a>
</div>

<div class='gt-panel-content'>
  <form class='gt-form gt-form-edit'>
    <section class='gt-form-section'>
      <label for='tags'>
        <span>When a device tagged</span>
        <input type='text' name='tags' placeholder='enter tags' class='gt-tag-input' value='{{tagList tags}}'>
      </label>

      <select name='condition[direction]' class='gt-event'>
        {{#select condition.direction}}
        <option value='enter'>enters</option>
        <option value='leave'>leaves</option>
        {{/select}}
      </select>

      <span>a</span>

      <select name='geometry-type' class='gt-geometry-type'>
        {{#selectShape condition}}
        <option value='polygon'>polygon</option>
        <option value='radius'>circle</option>
        {{/selectShape}}
      </select>

      <span>, </span>

      <select class='gt-action-selector'>
        {{#select action}}
        <option value='notification'>send the device a message</option>
        <option value='callbackUrl'>post to a server</option>
        <option value='trackingProfile'>change tracking profile</option>
        {{/select}}
      </select>
      <span>:</span>

      <label class='gt-action gt-action-notification' for='message'>
        <textarea class='gt-action-message-box' name='action[notification][text]' placeholder='message'>{{action.notification.text}}</textarea>
      </label>

      <label class='gt-action gt-action-callbackUrl gt-hide' for='url'>
        <input type='text' name='action[callbackUrl]' placeholder='url (optional)'>
      </label>

      <label class='gt-action gt-action-trackingProfile gt-hide' for='url'>
        <span>to</span>
        <select class='gt-action-profile-selector' name='action[trackingProfile]'>
          {{#select action.trackingProfile}}
          <option value='fine'>fine</option>
          <option value='adaptive'>adaptive</option>
          <option value='rough'>rough</option>
          <option value='off'>off</option>
          {{/select}}
        </select>
      </label>

      <label for='title'>
        Nickname (optional):
        <input type='text' name='properties[title]' placeholder='Title' class='gt-trigger-title-input' value='{{properties.title}}'>
      </label>
    </section>

    <section class='gt-form-section'>
      <button class='gt-button gt-button-blue gt-submit'>Update</button>
      <ul class='gt-edit-controls'>
        <li>
          <a class='gt-reset-delete' href='#'>&#x2716;</a>
        </li>
        <li>
          <button class='gt-item-delete gt-button-delete'></button>
        </li>
      </ul>
    </section>
  </form>
</div>